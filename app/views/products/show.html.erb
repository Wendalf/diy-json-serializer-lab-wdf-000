<h1 class="productName"><%= @product.name %></h1>
<h3 class="productPrice">$<%= @product.price %></h3>
<h5 class="productInventory">Inventory: <%= @product.inventory %></h5>
<p class="productDescription"><%= @product.description %></p>
<br />
<a href="#" class="js-next" data-id="<%= @product.id %>">Next Product</a>


<script type="text/javascript" charset="utf-8">
  $(function() {
    $(".js-next").on("click", function() {
      var nextId = parseInt($(".js-next").attr("data-id")) + 1;
      $.get("/products/" + nextId + "/data", function(data) {
        var d = JSON.parse(data);
        $(".productName").text(d.name);
        $(".productPrice").text(d.price);
        $(".productInventory").text(d.inventory);
        $(".productDescription").text(d.description);
        $(".js-next").attr("data-id", d.id);
      });
    });
  });
</script>
